{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "registry": "https://registry.npmjs.org/",
      "ignoreChanges": [
        "yarn.lock",
        ".npmrc",
        "**/*.md",
        "**/*.lock"
      ],
      "allowBranch": [
        "master"
      ],
      "commitHooks": false,
      "message": "chore(release): publish",
      "conventionalCommits": true
    }
  },
  "changelog": {
    "repo": "zcorky/zodash",
    "labels": {
      "enchancement": ":rocket:(Enhancement)",
      "bug": ":bug:(Bug Fix)",
      "doc": ":doc:(Refine Doc)",
      "feat": ":sparkles:(Feature)"
    },
    "cacheDir": ".changelog"
  }
}